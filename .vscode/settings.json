{
    "latex-workshop.latex.tools": [
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-shell-escape",
                "%DOC%"
            ]
        },
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-shell-escape",
                "%DOC%"
            ]
        },
        {
            "name": "lualatex",
            "command": "lualatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-shell-escape",
                "%DOC%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "pdflatex",
            "tools": ["pdflatex"]
        },
        {
            "name": "xelatex",
            "tools": ["xelatex"]
        },
        {
            "name": "lualatex",
            "tools": ["lualatex"]
        }
    ],
    "latex-workshop.latex.outDir": "./out", 
    "latex-workshop.viewer.pdf.internal.synctex.keybindings": true, 
    "editor.wordWrap": "on", 
    "files.autoSave": "onFocusChange" 
}